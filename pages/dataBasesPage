const puppeteer = require("../node_modules/puppeteer");

const createTableNameField = "[name='table']";
const numberOfColumns = "[name='num_fields']";
const clickButtonGo = "input[type=submit]";
const createColumnName = "[id='field_0_1']";
// const buttonSaveColumn = "#page_content > form > fieldset > input[type=submit]:nth-child(2)";
const buttonSaveColumn = "input[type=submit]";
//create table
//Table name:
class CreateTable {
    async enterTableName(page, text) {
        await page.type(createTableNameField, text)
    }

    async enterColumnNumber(page, text) {
        await page.type(numberOfColumns, text)
    }

//finish creation of table
    async clickGo(page) {
        await page.click(clickButtonGo)
    }

    async enterColumnName(page, text) {
        await page.click(createColumnName);
        await page.type(createColumnName, text)
    }

    async clickSaveColumn(page) {
        await page.click(buttonSaveColumn);
    }
}

module.exports = CreateTable;


