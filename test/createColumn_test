const puppeteer = require("../node_modules/puppeteer");
const DataBasesPage = require("../pages/dataBasesPage");

const createTableX = new DataBasesPage();
//, args: ['--start-fullscreen']
(async () => {
    // Pre-Cond
    const browser = await puppeteer.launch({ headless: false, args: ['--start-fullscreen']});
    const page = await browser.newPage();
    await page.goto("http://localhost/phpmyadmin/db_structure.php?db=qwerty");
    await page.setViewport({width: 1920, height: 1080});

    await createTableX.enterTableName(page, 'newTableX');
    await createTableX.enterColomnNumber(page, '1');
    await createTableX.clickGo(page);

    //Begin Test:
    await page.waitForSelector("[id='field_0_1']");
    await createTableX.enterColomnName(page, "qwerty");


    // await page.screenshot({path: 'example.png'});
    // await page.waitF("[name='do_save_data']");
    await createTableX.clickSaveColomn();
    // await createTableX.clickSaveColomn();
    await browser.close()
})();
