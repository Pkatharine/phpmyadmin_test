const puppeteer = require("../node_modules/puppeteer");
const dataBasesPage = require("../pages/dataBasesPage");

//import dataBasesPage from dataBasesPage;


//, args: ['--start-fullscreen']
(async () => {
    // Pre-Cond
    let createTableX = new dataBasesPage();
    const browser = await puppeteer.launch({headless: false});
    const page = await browser.newPage();
    await page.goto("http://localhost/phpmyadmin/db_structure.php?db=qwerty");
    await page.setViewport({width: 1420, height: 880});

    await createTableX.enterTableName(page, 'newTableX');
    await createTableX.enterColumnNumber(page, '');
    await createTableX.clickGo(page);

    //Begin Test:
    await page.waitForSelector("[id='field_0_1']");
    await createTableX.enterColumnName(page, "qwerty");

    await createTableX.clickSaveColumn(page);
    await browser.close()
})();
